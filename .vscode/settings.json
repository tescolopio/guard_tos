{
  "jest.runMode": {
    "type": "watch",
    "runAllTestsOnStartup": true,
    "showCoverageOnLoad": true,
    "debugMode": true,
    "testExplorer": {
      "enabled": true,
      "showInlineError": true
    }
  },
  "javascript.validate.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "coverage": true
  },
  "jest.jestCommandLine": "yarn test",
  "jest.nodeEnv": {
    "NODE_ENV": "test"
  },
  "jest.coverageColors": {
    "uncovered": "rgba(255,99,71, 0.2)",
    "partially-covered": "rgba(255,215,0, 0.2)",
    "covered": "rgba(50,205,50, 0.2)"
  },
  "jest.enableCodeLens": true,
  "jest.outputConfig": {
    "revealOn": "run",
    "revealWithFocus": "test-results",
    "clearOnRun": "terminal"
  }
}
